{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "tools/"
  ],
  "packageRules": [
    {
      "matchCategories": ["golang"],
      "matchDepTypes": ["golang"],
      "enabled": false
    },
    {
      "matchCategories": ["golang"],
      "matchDepTypes": ["toolchain"],
      "enabled": false
    }
  ]
}
